@model LayoutVM

<div class="sidebar">
    <div class="logo_content">
        <div class="logo">
            <i class="fa-solid fa-shop"></i>
            <div class="logo_name">Managment</div>
        </div>
        <i class="fa-solid fa-bars" id="btn"></i>
    </div>
    <ul class="nav_list">
        <li>
            <a asp-action="search" asp-controller="product">
                <i class="fa-solid fa-magnifying-glass"></i>
                <span class="links_name">Search</span>
            </a>
            <span class="tooltip">Search</span>
        </li>
        <li>
            <a asp-action="index" asp-controller="product">
                <i class="fa-solid fa-bag-shopping"></i>
                <span class="links_name">Products</span>
            </a>
            <span class="tooltip">Products</span>
        </li>
        <li>
            <a asp-action="index" asp-controller="customer">
                <i class="fa-solid fa-person"></i>
                <span class="links_name">Customers</span>
            </a>
            <span class="tooltip">Customers</span>
        </li>
        <li>
            <a asp-action="index" asp-controller="sale">
                <i class="fa-solid fa-table-list"></i>
                <span class="links_name">Sales List</span>
            </a>
            <span class="tooltip">Sale List</span>
        </li>
        <li>
            <a asp-action="index" asp-controller="refund">
                <i class="fa-solid fa-rotate-left"></i>
                <span class="links_name">Returns</span>
            </a>
            <span class="tooltip">Returns</span>
        </li>
        <li>
            <a asp-action="orders" asp-controller="sale">
                <i class="fa-solid fa-basket-shopping"></i>
                <span class="count">@Model.CountOrder</span>
                <span class="links_name">Orders</span>
            </a>
            <span class="tooltip">Order</span>
        </li>
        <li>
            <a asp-action="index" asp-controller="message">
                <i class="fa-regular fa-message"></i>
                <span class="links_name">Messages</span>
            </a>
            <span class="tooltip">Messages</span>
        </li>
        <li>
            <a asp-action="index" asp-controller="boxoffice">
                <i class="fa-solid fa-cash-register"></i>
                <span class="links_name">Box Office</span>
            </a>
            <span class="tooltip">Box Office</span>
        </li>
        <li>
            <a asp-action="index" asp-controller="displacement">
                <i class="fa-solid fa-right-left"></i>
                <span class="links_name">Displacement</span>
            </a>
            <span class="tooltip">Displacement</span>
        </li>
        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
        {
            <li>
                <a asp-action="index" asp-controller="dashboard" asp-area="admin">
                    <i class="fa-solid fa-unlock-keyhole"></i>
                    <span class="links_name">Admin Panel</span>
                </a>
                <span class="tooltip">Admin Panel</span>
            </li>
        }
    </ul>
    <div class="profile_content">
        <div class="profile">
            <div class="profile_details">
                @*<img src="/assets/img/Random.png" alt="">*@
                <div class="name_job">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="name">@User.Identity.Name</div>
                        <div class="job">
                            @foreach (var item in Model.Role)
                            {
                                <span> @item</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
        <a asp-action="logout" asp-controller="account"><i class="fa-solid fa-right-from-bracket" id="log_out"></i></a>
    </div>
</div>
