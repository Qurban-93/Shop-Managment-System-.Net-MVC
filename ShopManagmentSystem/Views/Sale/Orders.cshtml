@model SaleVM

<div class="container home_index">
    @if (Model.Products.Count > 0)
    {
        <h1 class="text-center">Selected products</h1>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Brand</th>
                    <th>Name</th>
                    <th>Color</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Series</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ProductVM product in Model.Products)
                {
                    <tr>
                        <td>@product.Brand</td>
                        <td>@product.Name</td>
                        <td>@product.Color</td>
                        <td class="price">@product.Price</td>
                        <td>@product.Category</td>
                        <td>@product.Series</td>
                        <td><a class="deleteBasketItem" data-id="@product.Id"><i class='bx bx-trash'></i> </a></td>

                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>Total Price :</td>
                    <td>
                        <span class="total_price">@(Model.Products.Sum(p => p.Price))</span> $
                    </td>
                    <td>Items :</td>
                    <td><span class="item_count">@(Model.Products.Count)</span>eded</td>
                </tr>
            </tfoot>
        </table>
        <div class="mt-2">
            <form method="post">               
                <input type="hidden" asp-for="TotalPrice">           
                <div class="form-group mt-2">
                    <label class="text-info">Pay With Card</label>
                    <input class="form-control" asp-for="PayWithCard" placeholder="Enter amount">
                    
                </div>
                <div class="form-group mt-2">
                    <label class="text-info">Add Customer</label>
                    <input class="form-control" asp-for="Customer" placeholder="Enter Customer Name">
                    <span class="text-danger" asp-validation-for="Customer"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="text-info">Customer Email</label>
                    <input class="form-control" asp-for="CustomerEmail" placeholder="Enter Customer Email">
                    <span class="text-danger" asp-validation-for="CustomerEmail"></span>
                </div>
                <div class="form-group mt-2">
                    <label class="text-info">Select Seller</label>
                    <select asp-for="EmployeeId" asp-items="@ViewBag.Sellers" class="form-control">                      
                    </select>
                    <span class="text-danger" asp-validation-for="EmployeeId"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Sale</button>
            </form>
        </div>


    }
    else
    {
        <a asp-action="index" asp-controller="home" style="text-align:center; text-decoration:none;">
            <h1>Mehsul Elave Edilmeyib !</h1>
        </a>
    }
</div>
