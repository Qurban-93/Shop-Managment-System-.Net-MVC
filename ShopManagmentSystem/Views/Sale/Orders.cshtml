@model List<ProductVM>

<div class="home_index">
    @if (Model.Count > 0)
    {
        <table>
            <tr>
                <th>Brand</th>
                <th>Name</th>
                <th>Color</th>
                <th>Price</th>
                <th>Category</th>
                <th>Series</th>
                <th>Seller</th>

            </tr>

            @foreach (ProductVM product in Model)
            {
                <tr>
                    <td>@product.Brand</td>
                    <td>@product.Name</td>
                    <td>@product.Color</td>
                    <td>@product.Price $</td>
                    <td>@product.Category</td>
                    <td>@product.Series</td>

                </tr>
            }
        </table>
    }
    else
    {
        <a asp-action="index" asp-controller="home"><h1>Mehsul Elave Edilmeyib !</h1></a>
    }
</div>
