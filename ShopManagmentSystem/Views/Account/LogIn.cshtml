@model LoginVM


<div style="padding-top:100px;" class="col-lg-4 col-m-4 col-sm-12 col-12 m-auto">
    <div class="mb-3">
        <a style="text-decoration:none;">
            <h3 class="text-primary text-center"><i class="fa-solid fa-shop-lock"></i> Shop Managment</h3>
        </a>       
    </div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post" style="margin:auto;">
        <div class="form-floating mb-3">
            <input asp-for="UserName" class="form-control" placeholder="Full Name">
            <label asp-for="UserName"></label>
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-floating mb-4 password-input">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password">
            <span class="watch-password"><i class="fa-solid fa-eye"></i></span>
            <label asp-for="Password">Password</label>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>       
        <div style="margin:auto;" class="text-center">
            <button style="width:30%; padding:10px;" type="submit" class="btn btn-primary mb-4">Login</button>
        </div>
    </form>
    <div class="text-center"><small><a asp-action="ForgotPassword" asp-controller="Account" class="text-primary">Forgot Password</a></small></div>
</div>


