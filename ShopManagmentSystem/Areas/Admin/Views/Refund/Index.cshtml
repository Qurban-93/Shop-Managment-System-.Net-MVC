@model List<RefundOrder>

<div class="container">
    <div class="row">
        <h1 class="text-center"> Returns for Confirmation </h1>
        <hr />
         @if (TempData["Success"] != null)
        {
            <div style="transition:all 0.3s ease" id="alert_refund" class="alert alert-warning" role="alert">
                Mehsul qeri qaytarildi !
            </div>
        }
        @if(Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-primary">Date</th>
                        <th class="text-primary">Customer</th>
                        <th class="text-primary">Seller</th>
                        <th class="text-primary">Сlick to complete</th>
                        <th class="text-primary">Click for delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RefundOrder order in Model)
                    {
                        <tr>
                            <td>@order.CreateDate</td>
                            <td>@order.Customer.FullName</td>
                            <td>@order.EmployeeName</td>
                            <td>
                                <a class="issue_return" asp-action="orders" asp-route-id="@order.Id" asp-area="Admin">Issue a refund</a>
                            </td>
                            <td>
                                <a class="order_delete_Btn" data-id="@order.Id"><i class="fa-regular fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h5 class="text-warning text-center"> Qaytarimda mehsul yoxdu ! </h5>
        }

    </div>
</div>
