@model List<RefundOrder>

<div class="container">
    <div class="row">
        <h1 class="text-center"> List of items to return </h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Brand</th>
                    <th>Name</th>
                    <th>Color</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Series</th>
                    <th>Seller</th>
                    <th>Customer</th>
                    <th>Сlick to make a refund</th>
                </tr>
            </thead>
            <tbody>
                @foreach (RefundOrder order in Model)
                {
                    <tr>
                        <td>@order.Brand</td>
                        <td>@order.Name</td>
                        <td>@order.Color</td>
                        <td>@order.Price</td>
                        <td>@order.Category</td>
                        <td>@order.Series</td>
                        <td>@order.EmployeeName</td>
                        <td>@order.Customer.FullName</td>
                        <td>
                            <a asp-action="orders" asp-route-id="@order.Id" asp-area="Admin">Issue a refund</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
