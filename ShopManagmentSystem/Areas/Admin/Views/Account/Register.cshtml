@model RegistrationVM

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                <div class="text-center mb-3">
                    <a>
                        <h3 class="text-primary"><i class="fa-solid fa-user-plus"></i>   New User</h3>
                    </a>                 
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post">                
                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" placeholder="User Name">
                        <label>Add Name</label>
                        <span class="text-danger" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com">
                        <label asp-for="Email">Email address</label>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <label asp-for="Password">Password</label>
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="RepeatPassword" class="form-control" placeholder="Password">
                        <label asp-for="RepeatPassword">Repeat Password</label>
                        <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <select asp-for="BranchId" asp-items="@ViewBag.Branches" class="form-control" placeholder="Password"></select>
                        <label>Choose Branch</label>
                        <span class="text-danger" asp-validation-for="BranchId"></span>
                    </div>

                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Add User</button>
                </form>               
            </div>
        </div>
    </div>
</div>
