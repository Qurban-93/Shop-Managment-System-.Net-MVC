@model SalaryVM

<div class="container">
    <div class="row">
        <h1>Salary Reports</h1>
        <form method="get">
            <div class="mb-3 col-lg-8 d-flex search_product">            
                <div>
                    <input type="date" class="form-control" name="fromDate" value="@(ViewBag.fromDate != null ? ViewBag.fromDate.Date.ToString("yyyy-MM-dd") : "" )" />
                </div>
                <div>
                    <input type="date" class="form-control" name="toDate" value="@(ViewBag.toDate != null ? ViewBag.toDate.Date.ToString("yyyy-MM-dd") : "" )" />
                    <span class="text-danger">@(ViewBag.Error != null ? ViewBag.Error : "")</span>
                </div>
                <button type="submit" class="btn btn-primary col-lg-2">Search</button>
            </div>
        </form>
        @foreach (var item in Model.Employees)
        {   
            <h5 class="text-primary">@item.FullName</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <td>Salary</td>
                        <td>Details</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var salary in Model.Salaries)
                    {
                        if(salary.Employee.FullName == item.FullName)
                        {
                         <tr>
                            <td>@salary.CreateDate.ToString("dd MMMM yyyy , hh:mm")</td>
                            <td>@salary.Bonus</td>
                            <td><a asp-action="details" asp-route-id="@salary.Id"> Details </a></td>
                        </tr>
                        }
                        
                    }
                    <tr>
                        <td>fix salary : @item.EmployeePostion.FixSalary</td>
                        <td>total : @(item.Salaries.Sum(s => s.Bonus) + item.EmployeePostion.FixSalary)</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>
