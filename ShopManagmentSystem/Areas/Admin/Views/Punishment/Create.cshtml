@model PunishmentCreateVM


<div class="container">
    <div class="row">
        <h1 class="text-primary">Punishment Create Form</h1>
        <hr />
        <form method="post">
            <div class="mb-3">
                <label class="form-label text-primary">Choose Employee</label><span class="text-danger">*</span>
                <select asp-for=EmployeeId asp-items=ViewBag.Employees class="form-select prod_brand">
                </select>
                <span asp-validation-for=EmployeeId class="text-danger"></span>
            </div>          
            <div class="mb-3">
                <label class="form-label text-primary">Amount</label><span class="text-danger">*</span>
                <input type="number" asp-for=Amount class="form-control">
                <span class="text-danger" asp-validation-for="Amount"></span>
            </div>
            <div class="mb-3">
                <label asp-for=Descpription class="form-label text-primary">Description</label><span class="text-danger">*</span>
                <input type="text" asp-for=Descpription class="form-control">
                <span class="text-danger" asp-validation-for="Descpription"></span>
            </div>

            <button class="btn btn-primary" type="submit">Add Punishment</button>
            <a class="btn btn-primary" asp-action="index">Go Back</a>

        </form>
    </div>
</div>
